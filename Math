package com.mycompany.math2;
import java.util.Random;
import java.util.Scanner;
/**
 *
 * @author sashkar2025
 */
public class Math2 {

    public static void main(String[] args) {
        Random generator = new Random();
        Scanner scan = new Scanner(System.in);
        
        int num1;
        double numSin;
        double numCos;
        double numTan;

        //number between 0-90
        num1 = generator.nextInt(91);
        
        numSin = Math.sin(num1);
        numSin = roundAvoid(numSin, 3);
        
        numCos = Math.cos(num1);
        numCos = roundAvoid(numCos, 3);
        
        numTan = Math.tan(num1);
        numTan = roundAvoid(numTan, 3);
        
        System.out.println("Number:" + num1 + " Sine:" + numSin + " Cosine:" + numCos + " Tangent:" + numTan);
        
        //Generate number 1.0-20.0 ofr the radius of a circle, Find area of that circle, volume of a sphere of that radius.
        double num2 = generator.nextDouble(20.0);
        num2 = roundAvoid(num2, 1);
     
        double num3 = num2;
        double num8 = num3;
        
        //Area of a circle is Pi(r)^2
        num2 = num2*num2;
        num2 = num2*Math.PI;
        
        num2 = roundAvoid(num2, 3);
        
        //Area of a sphere is 4/3(Pi)(r)^3
        num3 = num3*num3*num3;
        num3 = num3*Math.PI;
        num3 = num3*4;
        num3 = num3/3;
        
        num3 = roundAvoid(num3, 3);
        System.out.println("Number:" + num8 + " Area of circle is " + num2 + " Volume of sphere is " + num3);
        
        //Generate number 1000.0 - 100,000,000.0, it's square root, it's natural log, Log10 
        
        double num4 = generator.nextDouble(999999001.0) + 1000.0;
        num4 = roundAvoid(num4, 5);
        
        double num4Root = Math.sqrt(num4);
        num4Root = roundAvoid(num4Root, 5);
        
        double num4NLog = Math.log(num4);
        num4NLog = roundAvoid(num4NLog, 5);
        
        double num4Log10 = Math.log10(num4);
        num4Log10 = roundAvoid(num4Log10, 5);
        
        System.out.println("Number:" + num4 + " Square root is " + num4Root + " Natural log is " + num4NLog + " Log base 10 is " + num4Log10);
        
        //Use same large number from before as energy, use (E = mc ^2), (c) is a constatn speed of light, solve for mass
        
        System.out.println("How many decimal places? ");
        int IntAmount = scan.nextInt();

        double sol = 299792458;
        double sol2 = sol*sol;
        double sol3 = num4/sol2;
        sol3 = roundAvoid(sol3, IntAmount);
        
        System.out.println(sol3 + " grams is needed to generate " + num4 + " joules of energy");
        
        //Use a scanner to get a real number value and an integer input by the user. Output the value to the power of the integer, using the Math Class methods, again rounded to a user input number of decimal places.
        
    }
    public static double roundAvoid(double value, int places) {
        double scale = Math.pow(10, places);
        return Math.round(value * scale) / scale;
    }
}
